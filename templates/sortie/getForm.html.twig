{% extends 'base.html.twig' %}

{% block title %} Sortie | {{ parent() }} {% endblock %}

{% block stylesheet %} {% endblock %}

{% block body %}

    <div class="card m-5 p-5">
        <h3 class="title">{{ title }} d'une sortie</h3>

        {{ form_start(form, {'attr': {'class': 'form-inline mt-5'}}) }}

        {{ form_errors(form) }}

        <div class="row w-100">
            <div class="col-sm-6">
                <div class="form-group mb-3">
                    <label for="sortie_nom" class="col-form-label col-sm-5 justify-content-start">
                        Nom
                        <span class="required">*</span>
                    </label>
                    <div class="col-sm-7">
                        {{ form_widget(form.nom) }}
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="sortie_date_debut" class="col-form-label col-sm-5 justify-content-start">
                        Date et heure
                        <span class="required">*</span>
                    </label>
                    <div class="col-sm-7">
                        {{ form_widget(form.dateDebut) }}
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="sortie_date_cloture" class="col-form-label col-sm-5 justify-content-start">
                        Date limite d'inscription
                        <span class="required">*</span>
                    </label>
                    <div class="col-sm-7">
                        {{ form_widget(form.dateCloture) }}
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="sortie_nb_inscriptions_max" class="col-form-label col-sm-5 justify-content-start">
                        Nombre de places
                        <span class="required">*</span>
                    </label>
                    <div class="col-sm-7">
                        {{ form_widget(form.nbInscriptionsMax) }}
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="sortie_duree" class="col-form-label col-sm-5 justify-content-start">
                        Dur√©e
                    </label>
                    <div class="col-sm-7">
                        {{ form_widget(form.duree) }}
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="sortie_description" class="col-form-label col-sm-5 justify-content-start">
                        Description
                    </label>
                    <div class="col-sm-7">
                        {{ form_widget(form.descriptionInfos) }}
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group mb-3">
                    <label for="sortie_lieu" class="col-form-label col-sm-2 justify-content-start">
                        Lieu
                        <span class="required">*</span>
                    </label>
                    <div class="col-sm-8">
                        {{ form_widget(form.lieu) }}
                    </div>
                    <div class="col-sm-2">
                        <a type="button" id="btn_lieu_add" class="btn btn-outline-success w-auto">
                            <i class="fa fa-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-5 ml-auto mr-auto">
            {{ form_widget(form.enregistrer) }}
            {{ form_widget(form.publier) }}
            <a type="button" href="{{ path('sortie_get_list') }}" class="btn btn-secondary">Annuler</a>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script>
        $('#btn_lieu_add').on('click', function () {
            routeGetForm = '{{ path('lieu_get_form') }}';

            $.ajax({
                url: routeGetForm,
                type: 'GET',
                success: function (data) {
                    $(data).modal();
                }
            });
        });
    </script>

{% endblock %}
