{% extends 'base.html.twig' %}

{% block title %} Modification | {{ parent() }} {% endblock %}

{% block stylesheet %} {% endblock %}

{% block body %}

    <div class="card m-5 p-5">
        <h3 class="title">{{ title }} d'un participant</h3>

        {{ form_start(form, {'attr': {'class': 'form-inline mt-5'}}) }}

        {{ form_errors(form) }}

        <div class="container">
            {% if title == "Modification" %}
                <div class="form-group mb-3">
                    <label for="participant_pseudo" class="col-form-label col-sm-3 justify-content-end">
                        Pseudo
                        <span class="required">*</span>
                    </label>
                    <div class="col-sm-6">
                        {{ form_widget(form.pseudo, {'attr': {'readonly': true} }) }}
                    </div>
                </div>
            {% else %}
                <div class="form-group mb-3">
                    <label for="participant_pseudo" class="col-form-label col-sm-3 justify-content-end">
                        Pseudo
                        <span class="required">*</span>
                    </label>
                    <div class="col-sm-6">
                        {{ form_widget(form.pseudo) }}
                    </div>
                </div>
            {% endif %}

            <div class="form-group mb-3">
                <label for="participant_nom" class="col-form-label col-sm-3 justify-content-end">
                    Nom
                    <span class="required">*</span>
                </label>
                <div class="col-sm-6">
                    {{ form_widget(form.nom) }}
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="participant_prenom" class="col-form-label col-sm-3 justify-content-end">
                    Prénom
                    <span class="required">*</span>
                </label>
                <div class="col-sm-6">
                    {{ form_widget(form.prenom) }}
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="participant_telephone" class="col-form-label col-sm-3 justify-content-end">
                    Téléphone
                    <span class="required">*</span>
                </label>
                <div class="col-sm-6">
                    {{ form_widget(form.telephone) }}
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="participant_mail" class="col-form-label col-sm-3 justify-content-end">
                    Email
                    <span class="required">*</span>
                </label>
                <div class="col-sm-6">
                    {{ form_widget(form.mail) }}
                </div>
            </div>

            {% if title == "Création" %}
                <div class="form-group mb-3">
                    <label for="participant_mot_de_passe" class="col-form-label col-sm-3 justify-content-end">
                        Mot de passe
                        <span class="required">*</span>
                    </label>
                    <div class="col-sm-6">
                        {{ form_widget(form.motDePasse) }}
                    </div>
                </div>
            {% endif %}

            <div class="form-group mb-3">
                <label for="participant_campus" class="col-form-label col-sm-3 justify-content-end">
                    Campus
                    <span class="required">*</span>
                </label>
                <div class="col-sm-6">
                    {{ form_widget(form.campus) }}
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="participant_administrateur" class="col-form-label col-sm-3 justify-content-end">
                    Administrateur
                </label>
                <div class="col-sm-6">
                    {{ form_widget(form.isAdministrateur) }}
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="participant_campus" class="col-form-label col-sm-3 justify-content-end">
                    Actif
                </label>
                <div class="col-sm-6">
                    {{ form_widget(form.isActif) }}
                </div>
            </div>
        </div>

        {{ form_widget(form._token) }}

        <div class="mt-5 ml-auto mr-auto">
            {{ form_widget(form.enregistrer) }}
            <a type="button" href="{{ path('participant_get_list') }}" class="btn btn-secondary">Annuler</a>
        </div>

        {{ form_end(form, {'render_rest': false}) }}
    </div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}

{% endblock %}
